.score {
  margin-bottom: 6%;
  font-size: 24px;
  color: #fff;
}

.forums {
  font-size: 24px;
  color: #fff;
  margin-bottom: 6%;
}

.forums__title-col {
  width: 50%;
}

.forums__header-name {
  width: fit-content;
  border-bottom: 3px dashed #fff;
}

.forums__row {
  height: 50px;
  vertical-align: bottom;
}

.forums__topic {
  display: flex;
  justify-content: space-between;
  max-width: 180px;
}

.forums__topic-new {
  color: #f04d22;
}

.forums__title a {
  text-decoration: none;
  color: #fff;
}

.forums__title.active {
  position: relative;

  &::before {
    content: '';
    position: absolute;
    display: block;
    background-image: url(../../assets/tank_1.svg);
    width: 41px;
    height: 32px;
    left: -60px;
    bottom: 0;
  }
}

.forums__footer {
  display: flex;
  flex-direction: row-reverse;
}

.forums__link {
  font-size: var(--regular-font);
  color: white;
  text-decoration: none;
}

.forums__table {
  width: 100%;
  text-align-last: left;
  margin-bottom: 40px;
}

.forums__table-header {
  height: 50px;
  vertical-align: top;
}
