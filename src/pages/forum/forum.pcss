.forum__new-topic {
  color: #F04D22;

  a {
    color: #F04D22;
  }
}

.forums__row.forum__new-topic {
  vertical-align: middle;
}

.eagle-after {
  position: relative;

  &::after {
    content: '';
    position: absolute;
    width: 30px;
    height: 30px;
    background-image: url(../../assets/eagle.svg);
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    right: -55px;
    bottom: 0;
  }
}
